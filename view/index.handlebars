<h1>Burger!</h1>

<div class="container">
<div class="row">
    <div class="col-lg-6 .col-md-6 .col-sm-6 .col-xs-6">
        <div class="jumbotron">
            <ul>
                {{#each burgers}} 
                {{#unless devoured}} 
                {{> burgers/burger-block devoured=true}} 
                {{/unless}} 
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-lg-6 .col-md-6 .col-sm-6 .col-xs-6">
        <div class="jumbotron">
            <ul>
                {{#each burgers}} 
                {{#if devoured}} 
                {{> burgers/burger-block devoured=false}} 
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>
</div>

<div class="row">
    <div class="jumbotron">
        <h2>Place your order</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="name">Burger Name:</label>
                <input type="text" id="name" name="burger-name">
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>